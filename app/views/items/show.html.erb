<!-- 하단부터는 comment 코드 -->


<div class="container">
  <div class="main-single">
    <div id="comments" class="comment-area">
      <h5 class="comment-title"><%= @item.comments.count %> Comments</h5>
      <ol class="comment-list">

        <% @comments.each do |comment| %>
        <!-- /.comment -->
          <li class="comment">
            <article class="comment-wrap">
              <div class="avatar">
                <img src="/images/blogs/comment-03.jpg" alt="">
              </div>
              <!-- /.avatar -->
              <div class="comment-content">
                <div class="comment-meta">
                  <div class="comment-time">
                    <%= comment.created_at %>
                  </div>
                  <div class="comment-author">
                    <h4><%= comment.user.username %></h4>
                  </div>
                </div>
                <div class="comment-text">
                  <p>
                    <%= comment.body %>
                  </p>
                </div>

                <% if comment.user == current_user %>
                  <div class="comment-data">
                    <%= link_to "삭제", comment_path(comment), method: :delete, class: "like" %>
                  </div>
                <% else %>
                  <div class="comment-data">
                    <a href="#" class="like" title="">좋아요</a>
                    <a href="<%= comment_path(comment) %>" class="reply" title="">댓글달기</a>
                  </div>
                <% end %>
              </div>
              <!-- /.comment-content -->
            </article>
            <!-- /.comment-wrap -->
          </li>
        <% end %>
        <!-- /.comment -->
      </ol>
      <!-- /.comment-list -->
      <div id="respond" class="comment-respond">
          <%= form_for @comment, class: "comment-form" do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :item_id, value: @item.id %>
              <fieldset class="field-message">
                <%= f.text_area :body, placeholder: "댓글을 남겨주세요" %>
              </fieldset>
              <div class="clearfix"></div>
              <div class="form-submit">
                <%= f.button "댓글 작성", name: :commit, value: "create" %>
              </div>
          <% end %>
      </div>
    </div>
    <!-- /.comment-area -->
  </div>
</div>
